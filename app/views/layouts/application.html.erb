<!DOCTYPE html>
<html lang="en">
  <head>
    <title>RplManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body class="bg-dark">
  	<header class="container">
  		<nav class="navbar navbar-expand-lg navbar-dark bg-info">
  			<%= link_to "RPL Manager", root_path, class: "navbar-brand" %>
  			<div class="collapse navbar-collapse" id="navbarColor01">
			    <ul class="navbar-nav mr-auto">
			      <li class="nav-item">
			      	<%= link_to "Printers", root_path, class: "nav-link" %>
			      </li>
			      <li class="nav-item">
			        <%= link_to "Print Logs", print_logs_path, class: "nav-link" %>
			      </li>
			    </ul>
          <% if logged_in? %>
            <%= current_user.username, class: "badge badge-success" %>
            <%= link_to "Logout", logout_path, class: "btn btn-primary" %>
          <%else%>
            <%= link_to "Sign In", login_path, class: "btn btn-primary" %>
          <%end%>
			  </div>
  		</nav>
  	</header>

  	<section class="container">
      <br>
      <div class="flash">
  			<% flash.each do |type, msg| %>
          <div class="alert alert-danger" role="alert">
            <%= msg %>
          </div>
  			<% end %>
      </div>

      <%= yield %>
    </section>
  </body>
</html>