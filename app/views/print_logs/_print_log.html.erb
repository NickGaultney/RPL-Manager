<div class="print_logs">
  <div class="print_log">
    <div class="thumbnail">
      <div class="text-light">
          <tr>
            <td> <%= link_to print_log.printer_name, print_log_path(print_log), class: colorize(print_log.status) %> </td>
            <td> <%= print_log.created_at.to_s.chop.chop.chop %> </td>
            <td> <%= truncate(print_log.file_name, length: 30) %> </td>
            <td> <%= print_log.filament_weight %>g </td>
            <td> <%= print_log.print_time %> min </td>
            <td> $<%= number_with_precision calculate_log_cost(print_log), :precision => 2 %> </td>
            <td class="text-right"> 
              <% if logged_in? %>
                <%= link_to "Edit", edit_print_log_path(print_log), class: "btn btn-default border rounded text-warning p-0 px-1" %>
                <%= link_to 'Delete', print_log, method: :delete, data: { confirm: 'Are you sure?' }, 
                class: "btn btn-default border rounded text-danger p-0 px-1" %> 
              <%end%>
            </td>
          </tr>
      </div>
    </div>
  </div>
</div>