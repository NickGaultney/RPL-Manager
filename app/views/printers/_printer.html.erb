<div class="printer" data-id=<%= printer.id %>>
  <div class="card border-warning mb-3" style="max-width: 20rem;">
    <div class="card-header"><%= link_to printer.name, printer_path(printer), class: colorize(printer.status) %></div>
    <div class="card-body">
      <h4 class="card-title">Status</h4>
      <p class="card-text">
        <% if logged_in? %>
          <%= link_to "Edit", edit_printer_path(printer), class: "btn btn-default border rounded text-warning p-0 px-2" %>
          <%= link_to 'Delete', printer, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger p-1" %>
        <%end%>
      </p>
    </div>
  </div>
</div>